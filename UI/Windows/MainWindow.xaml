<Window x:Class="FS服装搭配专家v1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FreeStyle"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <!-- 颜色资源 - 优化后的玻璃拟态风格 -->
        <SolidColorBrush x:Key="GlassCardColor" Color="#15FFFFFF" /> <!-- 半透明白色卡片（降低透明度，形成层次） -->
        <SolidColorBrush x:Key="GlassCardHoverColor" Color="#40FFFFFF" /> <!-- 悬停/选中状态卡片颜色 -->
        <SolidColorBrush x:Key="GlassBorderColor" Color="#4DFFFFFF" /> <!-- 玻璃边框色 -->
        <SolidColorBrush x:Key="GlassHighlightColor" Color="#20FFFFFF" /> <!-- 玻璃高光边框色，强化边缘切割感 -->
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFFFF" /> <!-- 文本颜色 -->
        <SolidColorBrush x:Key="PreviewTextColor" Color="#FFFFFFFF" /> <!-- 预览文本颜色 -->
        <SolidColorBrush x:Key="StatusTextColor" Color="#FFCCCCCC" /> <!-- 状态文本颜色 -->
        <SolidColorBrush x:Key="TitleTextColor" Color="#FFFFFFFF" /> <!-- 标题文本颜色 -->
        <SolidColorBrush x:Key="ButtonGlassColor" Color="#25FFFFFF" /> <!-- 按钮玻璃颜色（更高透明度，形成层次） -->
        <SolidColorBrush x:Key="ButtonGlassPressedColor" Color="#40FFFFFF" /> <!-- 按钮按下状态颜色 -->
        <SolidColorBrush x:Key="BodyTextColor" Color="#E6FFFFFF" /> <!-- 正文文本颜色（提高可读性） -->
        
        <!-- 主容器样式 - 优化后的玻璃拟态 -->
        <Style x:Key="MainContainer" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource GlassCardColor}" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="24" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{StaticResource GlassHighlightColor}" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="40" 
                                      ShadowDepth="12" 
                                      Opacity="0.15" 
                                      Direction="270" 
                                      Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 标题栏容器样式 -->
        <Style x:Key="TitleBarContainer" TargetType="Border">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>
        
        <!-- 霓虹渐变文字效果 -->
        <LinearGradientBrush x:Key="NeonGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF667EEA" Offset="0" />
            <GradientStop Color="#FF6DD5FA" Offset="0.5" />
            <GradientStop Color="#FFC58AF9" Offset="1" />
        </LinearGradientBrush>
        
        <!-- 玻璃拟态按钮样式 -->
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonGlassColor}" />
            <Setter Property="Foreground" Value="{StaticResource TextColor}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{StaticResource GlassHighlightColor}" />
            <Setter Property="Padding" Value="18,10" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="600" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                CornerRadius="16" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter x:Name="ContentPresenter" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              TextElement.Foreground="{TemplateBinding Foreground}" 
                                              TextElement.FontWeight="{TemplateBinding FontWeight}" />
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                            To="#40FFFFFF" 
                                                            Duration="0:0:0.2" />
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" 
                                                                           Storyboard.TargetProperty="(TextElement.Foreground)">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="{StaticResource NeonGradient}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                            To="#40FFFFFF" 
                                                            Duration="0:0:0.1" />
                                            <!-- 移除BorderThickness动画，因为Thickness类型不能直接用ObjectAnimationUsingKeyFrames -->
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" 
                                                                           Storyboard.TargetProperty="Effect">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.1">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <DropShadowEffect BlurRadius="8" 
                                                                          ShadowDepth="2" 
                                                                          Opacity="0.05" 
                                                                          Direction="270" 
                                                                          Color="#000000" />
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" 
                                                                           Storyboard.TargetProperty="(TextElement.Foreground)">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{StaticResource NeonGradient}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" 
                                      ShadowDepth="4" 
                                      Opacity="0.1" 
                                      Direction="270" 
                                      Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 窗口管理按钮样式 -->
        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonGlassColor}" />
            <Setter Property="Foreground" Value="{StaticResource TextColor}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{StaticResource GlassHighlightColor}" />
            <Setter Property="Padding" Value="14,7" />
            <Setter Property="Margin" Value="6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                CornerRadius="8" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter x:Name="ContentPresenter" 
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              TextElement.Foreground="{TemplateBinding Foreground}"
                                              TextElement.FontSize="12"
                                              TextElement.FontWeight="Medium" />
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                            To="#40FFFFFF" 
                                                            Duration="0:0:0.2" />
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" 
                                                                           Storyboard.TargetProperty="(TextElement.Foreground)">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="{StaticResource NeonGradient}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                            To="#40FFFFFF" 
                                                            Duration="0:0:0.1" />
                                            <!-- 移除BorderThickness动画，因为Thickness类型不能直接用ObjectAnimationUsingKeyFrames -->
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" 
                                                                           Storyboard.TargetProperty="Effect">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.1">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <DropShadowEffect BlurRadius="6" 
                                                                          ShadowDepth="1" 
                                                                          Opacity="0.05" 
                                                                          Direction="270" 
                                                                          Color="#000000" />
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" 
                                                                           Storyboard.TargetProperty="(TextElement.Foreground)">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{StaticResource NeonGradient}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" 
                                      ShadowDepth="2" 
                                      Opacity="0.1" 
                                      Direction="270" 
                                      Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 列表项样式 - 优化后的玻璃拟态 -->
        <Style x:Key="ListItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#1AFFFFFF" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Margin" Value="4,4,4,0" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#33FFFFFF" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" 
                                      ShadowDepth="2" 
                                      Opacity="0.05" 
                                      Direction="270" 
                                      Color="#000000" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 选中列表项样式 - 优化后的玻璃拟态 -->
        <Style x:Key="ListItemSelectedStyle" TargetType="Border">
            <Setter Property="Background" Value="#33FFFFFF" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Margin" Value="4,4,4,0" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#4DFFFFFF" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" 
                                      ShadowDepth="2" 
                                      Opacity="0.1" 
                                      Direction="270" 
                                      Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 预览区域样式 - 优化后的玻璃拟态 -->
        <Style x:Key="PreviewStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource GlassCardColor}" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Margin" Value="0,28,0,0" />
            <Setter Property="Padding" Value="24" />
            <Setter Property="Height" Value="400" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{StaticResource GlassHighlightColor}" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="32" 
                                      ShadowDepth="10" 
                                      Opacity="0.12" 
                                      Direction="270" 
                                      Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 滚动条样式 - 玻璃拟态风格 -->
        <Style x:Key="GlassScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track" Width="6">
                                <Track.Resources>
                                    <Style TargetType="Thumb">
                                        <Setter Property="Background" Value="#4DFFFFFF" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Border Background="#4DFFFFFF" 
                                                            BorderBrush="Transparent" 
                                                            BorderThickness="0" 
                                                            CornerRadius="3">
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Track.Resources>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" 
                                                  Style="{x:Null}" 
                                                  Background="Transparent" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" 
                                                  Style="{x:Null}" 
                                                  Background="Transparent" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 列表框样式 - 优化后的玻璃拟态 -->
        <Style x:Key="GlassListBox" TargetType="ListBox">
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="Transparent" 
                                BorderBrush="Transparent" 
                                BorderThickness="0">
                            <ScrollViewer x:Name="ScrollViewer" 
                                          Padding="{TemplateBinding Padding}">
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar" BasedOn="{StaticResource GlassScrollBar}" />
                                </ScrollViewer.Resources>
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 修复后的标签页样式 --> 
        <Style x:Key="GlassTabControl" TargetType="TabControl"> 
            <Setter Property="Background" Value="Transparent" /> 
            <Setter Property="BorderThickness" Value="0" /> 
            <Setter Property="Padding" Value="0" /> 
            <Setter Property="Margin" Value="20" /> 
            <Setter Property="Template"> 
                <Setter.Value> 
                    <ControlTemplate TargetType="TabControl"> 
                        <Grid> 
                            <Grid.RowDefinitions> 
                                <RowDefinition Height="*" /> 
                            </Grid.RowDefinitions> 
                            
                            <!-- 内容区域 --> 
                            <Border x:Name="ContentPanel" 
                                    Grid.Row="0" 
                                    Background="#0DFFFFFF" 
                                    BorderBrush="{StaticResource GlassBorderColor}" 
                                    BorderThickness="1" 
                                    CornerRadius="16" 
                                    Margin="0,0,0,20"> 
                                <Border.Effect> 
                                    <DropShadowEffect BlurRadius="32" 
                                                      ShadowDepth="8" 
                                                      Opacity="0.1" 
                                                      Direction="270" 
                                                      Color="#000000" /> 
                                </Border.Effect> 
                                <Grid> 
                                    <Grid.RowDefinitions> 
                                        <RowDefinition Height="Auto" /> 
                                        <RowDefinition Height="*" /> 
                                    </Grid.RowDefinitions> 
                                    
                                    <!-- 关键修改：将 TabPanel 替换为 StackPanel --> 
                                    <StackPanel x:Name="HeaderPanel" 
                                               Grid.Row="0" 
                                               Panel.ZIndex="2" 
                                               Margin="30,20,0,0" 
                                               IsItemsHost="True" 
                                               HorizontalAlignment="Left" 
                                               Background="Transparent" 
                                               Orientation="Horizontal"/> <!-- 新增 Orientation 确保横向排列 --> 
                                    
                                    <!-- 内容显示 --> 
                                    <ContentPresenter x:Name="PART_SelectedContentHost" 
                                                      Grid.Row="1" 
                                                      Margin="20,20,20,20" 
                                                      ContentSource="SelectedContent" /> 
                                </Grid> 
                            </Border> 
                        </Grid> 
                    </ControlTemplate> 
                </Setter.Value> 
            </Setter> 
        </Style>
        
        <!-- 标签项样式 -->
        <Style x:Key="GlassTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{StaticResource TextColor}" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="4,0,4,0" />
            <Setter Property="FontWeight" Value="600" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabBorder"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CornerRadius="8"
                                Cursor="Hand"
                                MinWidth="80"
                                Height="36"
                                Margin="0,0,0,0"
                                Padding="12,8">
                            <ContentPresenter x:Name="ContentPresenter"
                                              ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}"
                                              TextElement.FontWeight="{TemplateBinding FontWeight}"
                                              TextElement.FontSize="14"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#40FFFFFF" />
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="{StaticResource GlassHighlightColor}" />
                                <Setter TargetName="TabBorder" Property="BorderThickness" Value="1" />
                                <Setter TargetName="ContentPresenter" Property="TextElement.Foreground" Value="{StaticResource TextColor}" />
                                <Setter TargetName="TabBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="4" 
                                                          ShadowDepth="1" 
                                                          Opacity="0.1" 
                                                          Direction="270" 
                                                          Color="#000000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#25FFFFFF" />
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="{StaticResource GlassHighlightColor}" />
                                <Setter TargetName="TabBorder" Property="BorderThickness" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- 渐变背景 - 优化后的柔和渐变 -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#6a85b6" Offset="0" />
                <GradientStop Color="#bac8e0" Offset="0.5" />
                <GradientStop Color="#f0c9e8" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- 窗口拖动区域 -->
        <Grid Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" />
        
        <!-- 主内容区域 -->
        <Border Style="{StaticResource MainContainer}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
            
            <!-- 顶部标题栏卡片 -->
            <Border Grid.Row="0" Style="{StaticResource TitleBarContainer}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="60">
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Left">
                        <TextBlock Text="FreeStyle" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0" />
                        <Button Name="btnSkin" 
                                Width="40" 
                                Height="40" 
                                Click="btnSkin_Click"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Padding="0"
                                Margin="0">
                            <Grid Width="24" Height="24">
                                <!-- 渐变背景 -->
                                <Border Width="24" Height="24">
                                    <Border.Background>
                                        <LinearGradientBrush x:Name="IconGradient" StartPoint="-1,-1" EndPoint="2,2">
                                            <GradientStop Color="#FF667EEA" Offset="0" />
                                            <GradientStop Color="#FF6DD5FA" Offset="0.5" />
                                            <GradientStop Color="#FFC58AF9" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Border.Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <PointAnimation 
                                                        Storyboard.TargetName="IconGradient" 
                                                        Storyboard.TargetProperty="StartPoint" 
                                                        From="-1,-1" To="1,1" 
                                                        Duration="0:0:3" />
                                                    <PointAnimation 
                                                        Storyboard.TargetName="IconGradient" 
                                                        Storyboard.TargetProperty="EndPoint" 
                                                        From="0,0" To="2,2" 
                                                        Duration="0:0:3" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>
                                <!-- 图标 -->
                                <Image Source="C:\Users\27507\Desktop\py\UI\FS服装搭配专家v1.0\template\vest-l.png" 
                                       Width="24" 
                                       Height="24" 
                                       Stretch="Uniform" 
                                       Visibility="Visible" />
                            </Grid>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top" 
                                Margin="5,-5,0,0">
                        <Button Content="最小化" 
                                Width="80" 
                                Style="{StaticResource WindowButton}" 
                                Click="Minimize_Click" />
                        <Button Content="最大化" 
                                Width="80" 
                                Style="{StaticResource WindowButton}" 
                                Click="Maximize_Click" />
                        <Button Content="关闭" 
                                Width="80" 
                                Style="{StaticResource WindowButton}" 
                                Click="Close_Click" />
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 中间内容 -->
            <TabControl Grid.Row="1" Style="{StaticResource GlassTabControl}">
                <!-- 服装道具标签页 -->
                <TabItem Header="服装道具" Style="{StaticResource GlassTabItem}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- 左侧服装列表 -->
                        <Border Grid.Column="0" Width="260" Padding="16,16,16,0" CornerRadius="16" Background="Transparent">
                            <Grid>
                                <TextBlock Text="服装列表" 
                                           FontSize="18" 
                                           FontWeight="600" 
                                           Foreground="{StaticResource TitleTextColor}"
                                           Margin="0,0,0,24" />
                                <ListBox x:Name="lstItemShop" 
                                         Margin="0,40,0,0" 
                                         SelectionChanged="lstItemShop_SelectionChanged"
                                         Style="{StaticResource GlassListBox}"
                                         BorderThickness="0"
                                         Background="Transparent">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ListItemStyle}">
                                            <TextBlock Text="{Binding}" 
                                                       FontSize="14" 
                                                       FontWeight="Medium" 
                                                       Foreground="{StaticResource TextColor}" />
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.Resources>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.Resources>
                                </ListBox>
                            </Grid>
                        </Border>
                        
                        <!-- 右侧预览效果 -->
                        <Border Grid.Column="1" Width="260" Padding="16,16,16,0" CornerRadius="16" Background="Transparent">
                            <Grid>
